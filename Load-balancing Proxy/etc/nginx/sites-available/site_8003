server {
    listen       8003;
    server_name  localhost;

    location / {
        root   /var/www/html;
        index  index.html;
        
        # Preserve X-Request-ID from incoming requests
        proxy_set_header X-Request-ID $http_x_request_id;
        # Ensure NGINX includes it in the response
        add_header X-Request-ID $http_x_request_id;
    }
}
